@model IEnumerable<MultasB.Models.Agentes>

@{
    ViewBag.Title = "Agente";
}

<h2>Listagem de Agentes</h2>
@if (User.IsInRole("RecursosHumanos"))
{
<p>
    @Html.ActionLink("Novo Agente", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Esquadra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fotografia)
        </th>
        <th></th>
    </tr>

@foreach (var agente in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => agente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => agente.Esquadra)
        </td>
        <td>
            @*apresentar as imagens dos agentes*@
            <img src="~/imagens/@agente.Fotografia"
                 alt="imagem do agente @agente.Nome"
                 title="@agente.Nome"
                 width="50" />
                 @*Html.DisplayNameFor(model => model.Fotografia)*@
        </td>
        
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id = agente.ID })

            @if (User.IsInRole("RecursosHumanos"))
    {
        <text>
            |
            @Html.ActionLink("Editar", "Edit", new { id = agente.ID }) |

            @Html.ActionLink("Apagar", "Delete", new { id = agente.ID })
        </text>

}
        </td>
    </tr>
}

</table>
